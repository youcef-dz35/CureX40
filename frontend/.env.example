# CureX40 Frontend Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1

# App Configuration
VITE_APP_NAME=CureX40
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_DEBUG=true

# Authentication
VITE_AUTH_TOKEN_STORAGE_KEY=curex40-token
VITE_AUTH_USER_STORAGE_KEY=curex40-user
VITE_AUTH_REFRESH_TOKEN_STORAGE_KEY=curex40-refresh-token

# Feature Flags
VITE_FEATURE_2FA_ENABLED=true
VITE_FEATURE_BIOMETRIC_AUTH=false
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_IOT_INTEGRATION=true
VITE_FEATURE_AI_RECOMMENDATIONS=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
VITE_PUSHER_APP_KEY=your_pusher_app_key_here
VITE_PUSHER_APP_CLUSTER=mt1

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=your_hotjar_id_here

# Sentry Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=development

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Geolocation
VITE_DEFAULT_LATITUDE=40.7128
VITE_DEFAULT_LONGITUDE=-74.0060
VITE_GEOLOCATION_TIMEOUT=10000

# Notifications
VITE_NOTIFICATION_TIMEOUT=5000
VITE_WEB_PUSH_PUBLIC_KEY=your_web_push_public_key_here

# Cache Configuration
VITE_CACHE_MEDICATIONS_TTL=300000
VITE_CACHE_USER_DATA_TTL=600000
VITE_CACHE_PHARMACIES_TTL=1800000

# API Rate Limiting
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_CACHE_STRATEGY=NetworkFirst

# Development Tools
VITE_REDUX_DEVTOOLS=true
VITE_MOCK_API=false
VITE_API_DELAY=0

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,ar

# Security
VITE_CSRF_TOKEN_NAME=X-CSRF-TOKEN
VITE_SECURE_STORAGE=true

# Performance
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true
VITE_CODE_SPLITTING=true
